<Window
    x:Class="PlaylistArchivizer.UI.WPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:homeVm="clr-namespace:PlaylistArchivizer.UI.WPF.ViewModels.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:PlaylistArchivizer.UI.WPF.Views"
    xmlns:vm="clr-namespace:PlaylistArchivizer.UI.WPF.ViewModels"
    Title="Playlist Archivizer"
    Width="1200"
    Height="800"
    MinWidth="1050"
    d:DataContext="{d:DesignInstance vm:MainViewModel}"
    Background="#1E1E1E"
    WindowState="{Binding CurrentWindowState, Mode=TwoWay}"
    mc:Ignorable="d">

    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type homeVm:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:LoadingViewModel}">
                <views:LoadingView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ErrorViewModel}">
                <views:ErrorView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
